<?xml version="1.0"?>
<registry>

    <records prefix="plone.resources/ftwcolorbox_lib"
             interface="Products.CMFPlone.interfaces.IResourceRegistry">
        <value key="js">++resource++ftw.colorbox.resources/jquery.colorbox-min.js</value>
        <value key="css">
            <element>++resource++ftw.colorbox.resources/colorbox.css</element>
        </value>
        <value key="deps">jquery</value>
    </records>

    <records prefix="plone.resources/ftwcolorbox_init"
             interface="Products.CMFPlone.interfaces.IResourceRegistry">
        <value key="js">init-colorbox.js</value>
        <value key="deps">jquery</value>
    </records>

    <records prefix="plone.resources/ftwcolorbox_additional"
             interface="Products.CMFPlone.interfaces.IResourceRegistry">
        <value key="js">++resource++ftw.colorbox.resources/colorbox.js</value>
        <value key="deps">jquery</value>
    </records>

    <records prefix="plone.bundles/ftw-colorbox-resources"
             interface="Products.CMFPlone.interfaces.IBundleRegistry">
        <value key="resources">
            <element>ftwcolorbox_lib</element>
            <element>ftwcolorbox_init</element>
            <element>ftwcolorbox_additional</element>
        </value>
        <value key="enabled">True</value>
        <value key="depends">plone</value>
        <value key="compile">False</value>
        <value key="jscompilation">++plone++ftw.colorbox.resources/ftw-colorbox-compiled.js</value>
        <value key="csscompilation">++plone++ftw.colorbox.resources/ftw-colorbox-compiled.css</value>
        <value key="merge_with">default</value>
    </records>

</registry>
